@model MvcMovie.Models.EmployeeAddressViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Nhân viên</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>

<form asp-controller="Employee" asp-action="Index" method="get">
    <p>
        <select asp-for="EmployeeAdress" asp-items="Model.Adress">
            <option value="">All</option>
        </select>

        Tên: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Address)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
