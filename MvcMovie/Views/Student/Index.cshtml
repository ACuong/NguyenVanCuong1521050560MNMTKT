@model IEnumerable<MvcMovie.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Sinh Viên</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<form asp-controller="Student" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentID">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.StudentID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
